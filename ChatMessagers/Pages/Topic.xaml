<Window x:Class="ChatMessagers.Pages.Topic"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatMessagers.Pages"
        mc:Ignorable="d"
        Title="Topic" Height="477" Width="473" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen" Closing="Window_Closing">
    <Grid>
        <Button x:Name="AddUserBtn" Content="Leave Chatroom" BorderBrush="Black" BorderThickness="2" HorizontalAlignment="Left" Margin="0,289,0,0" VerticalAlignment="Top" Height="29" Width="142" FontFamily="Bahnschrift SemiBold" FontSize="16" Click="CloseBTN_Click"/>
        <Button x:Name="ChangeTopicBtn" Content="Change Topic" BorderBrush="Black" BorderThickness="2" HorizontalAlignment="Left" Margin="0,260,0,0" VerticalAlignment="Top" Height="29" Width="142" FontFamily="Bahnschrift SemiBold" FontSize="16" Click="CloseBTN_Click"/>
        <Button x:Name="LeaveChatroomBtn" Content="Add User" BorderBrush="Black" BorderThickness="2" HorizontalAlignment="Left" Margin="0,231,0,0" VerticalAlignment="Top" Height="29" Width="142" FontFamily="Bahnschrift SemiBold" FontSize="16" Click="CloseBTN_Click"/>
        <TextBox HorizontalAlignment="Left" BorderThickness="3" BorderBrush="Black" Margin="0,318,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="382" Height="143"/>
        <Button x:Name="SendBtn" Content="Send" Background="LightBlue" BorderBrush="Black" BorderThickness="2" HorizontalAlignment="Left" Margin="382,318,0,0" VerticalAlignment="Top" Height="143" Width="91" FontFamily="Bahnschrift SemiBold" FontSize="16" Click="CloseBTN_Click"/>
        <ListView d:ItemsSource="{d:SampleData ItemCount=1}" Margin="0,0,331,230">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border  BorderThickness="1" Height="Auto" Width="111">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Width="95" RenderTransformOrigin="0.5,0.5" >
                            <StackPanel.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform ScaleX="-1"/>
                                    <SkewTransform/>
                                    <RotateTransform/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </StackPanel.RenderTransform>
                            <StackPanel VerticalAlignment="Center" Height="41" >
                                <Label  Height="25" Width="67" Margin="15" x:Name="Namelbl" Content="{Binding Name}" RenderTransformOrigin="0.5,0.5">
                                    <Label.RenderTransform>
                                        <TransformGroup>
                                            <ScaleTransform ScaleX="-1"/>
                                            <SkewTransform/>
                                            <RotateTransform/>
                                            <TranslateTransform/>
                                        </TransformGroup>
                                    </Label.RenderTransform>
                                </Label>
                            </StackPanel>

                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <ListView x:Name="TopicLst" d:ItemsSource="{d:SampleData ItemCount=2}" Margin="142,0,0,143">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border  BorderThickness="1" Height="Auto" Width="Auto">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Width="320" Height="46" >

                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left" >
                                <Label  Height="44" Width="60" Margin="15" x:Name="DateLbl" Content="{Binding Date}"/>
                            </StackPanel>
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left" >
                                <Label  Height="44" Width="53" Margin="15" x:Name="Namelbl" Content="{Binding Name}"/>
                            </StackPanel>
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left" >
                                <Label  Height="44" Width="118" Margin="15" x:Name="Messagelbl" Content="{Binding Message}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </Grid>
</Window>
